<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.deepthigunasekara.smartdoorlock">

    <application

        android:allowBackup="true"
        android:icon="@drawable/lock2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminActivity" />
        <activity android:name=".FamilyActivity" />
        <activity android:name=".GuestActivity" />
        <activity android:name=".AddActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".RemoveActivity"></activity>


    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:required="true" android:name ="android.permission.ACCESS_WIFI_STATE"/>

</manifest>